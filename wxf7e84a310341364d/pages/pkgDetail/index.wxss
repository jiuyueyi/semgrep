page {
    height: 100%;
}

.pkg-detail {
    background-color: #fff;
    height: calc(100% - 24rpx);
    margin-top: 24rpx;
}

.t-header {
    border-bottom: 2rpx solid #f0f0f0;
    color: #999;
    font-family: PingFangSC,PingFangSC-Regular;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 32px;
    padding: 32rpx;
    text-align: left;
}

.t-body {
    padding: 0 32rpx;
}

.t-body .t-list {
    border-bottom: 2rpx solid #f0f0f0;
    color: #3c3c3c;
    font-family: HelveticaNeue,HelveticaNeue-Regular;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 32rpx;
    padding: 32rpx 0;
}

.t-flex,.t-flex .f1 {
    display: flex;
}

.t-flex .f1 {
    align-items: center;
    flex: 1 0 0;
}

.t-flex .f1.first {
    flex: none;
    width: 80rpx;
}

.t-flex .f1.second,.t-flex .f1.third {
    justify-content: center;
}

.t-flex .f1.last {
    justify-content: flex-end;
    text-align: center;
}

.t-flex .f1 .icon {
    height: 48rpx;
    margin-right: 8rpx;
    vertical-align: middle;
    width: 48rpx;
}