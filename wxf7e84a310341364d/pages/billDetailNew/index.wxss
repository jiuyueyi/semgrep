.bill-detail-main {
    font-family: PingFangSC,PingFangSC-Regular;
    text-align: center;
}

.bill-detail-main .site-name {
    color: #1f1f1f;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 32rpx;
    padding-top: 40rpx;
    text-align: center;
}

.bill-detail-main .site-code {
    color: #999;
    font-size: 14px;
    font-weight: 400;
    line-height: 14px;
    margin: 16rpx 0 4rpx;
    text-align: center;
}

.bill-detail-main .money {
    color: #3c3c3c;
    font-family: Helvetica,Helvetica-Bold;
    font-size: 72rpx;
    font-weight: 700;
    line-height: 86rpx;
}

.bill-detail-main .status {
    color: #fb602d;
    font-size: 28rpx;
    font-weight: 400;
    margin: 24rpx 0 96rpx;
}

.bill-detail-list {
    padding: 0 32rpx;
}

.bill-detail-list .list {
    display: flex;
    font-size: 32rpx;
    font-weight: 400;
    justify-content: space-between;
    line-height: 32rpx;
    margin-bottom: 48rpx;
}

.bill-detail-list .list .label {
    color: #999;
    font-size: 28rpx;
}

.bill-detail-list .list .val {
    color: #3c3c3c;
}