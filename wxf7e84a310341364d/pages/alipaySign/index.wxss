.alipay-sign {
    background: #fff;
    height: 100%;
    margin-top: 20rpx;
    padding: 0 32rpx;
    position: fixed;
}

.btn {
    margin-top: 76rpx;
    text-align: center;
}

.btn button {
    border: 2rpx solid #d22d3a;
    color: #d22d3a;
    display: inline-block;
    font-family: PingFangSC,PingFangSC-Medium;
    font-size: 28rpx;
    font-weight: 400;
    font-weight: 500;
    line-height: 40rpx;
    outline: none;
    padding: 20rpx 40rpx;
    width: auto;
}

.brand {
    text-align: center;
}

.brand image {
    height: 96rpx;
    margin-top: 100rpx;
    vertical-align: middle;
    width: 96rpx;
}

.brand .brand-name {
    color: #333;
    font-family: PingFangSC,PingFangSC-Medium;
    font-size: 32rpx;
    font-weight: 500;
    line-height: 36rpx;
    margin-top: 20rpx;
    text-align: center;
}

.sign-detail {
    color: #3c3c3c;
    margin-top: 32rpx;
}

.sign-detail view:first-of-type {
    margin-bottom: 14rpx;
}

.tip-text {
    margin-top: 44rpx;
}

.tip-text text {
    color: #666;
}

.modal-content {
    background-color: #fff;
    border-radius: 12rpx;
    padding: 32rpx;
    width: 550rpx;
}

.modal-content .modal-title {
    color: #3c3c3c;
    font-family: PingFangSC,PingFangSC-Medium;
    font-size: 36rpx;
    font-weight: 500;
    line-height: 56rpx;
    text-align: center;
}

.zhi-text {
    background: #f4f4f4;
    border-radius: 6px;
    color: #999;
    line-height: 44rpx;
    margin-top: 28rpx;
    padding: 24rpx 16rpx;
    word-break: break-all;
}

.btn-copy {
    margin-top: 24rpx;
    text-align: center;
}

.btn-copy button {
    background: linear-gradient(136deg,#eb596c 2%,#d22d3a);
    border: none;
    border-radius: 16rpx;
    color: #fff;
    display: inline-block;
    font-size: 28rpx;
    font-weight: 400;
    height: 64rpx;
    line-height: 64rpx;
    outline: none;
    text-align: center;
    width: auto;
    width: 176rpx;
}

.img-wrap {
    border-top: 2rpx dashed #f0f0f0;
    margin-top: 40rpx;
    text-align: center;
}

.img-wrap image {
    height: 300rpx;
    width: 300rpx;
}

.modal-tip {
    color: #999;
    margin-top: 20rpx;
    text-align: center;
}

.close-img {
    height: 56rpx;
    margin-left: 50%;
    margin-top: 64rpx;
    text-align: center;
    transform: translateX(-50%);
    width: 58rpx;
}