.btn-box {
    height: 45px;
    line-height: 45px;
}

.modal-btn {
    border: none;
    border-radius: 0;
    font-size: 16px;
    height: 44px;
    line-height: 44px;
    margin: 0;
    padding: 0;
}

.btn-cancel {
    background-color: #fff;
    border: 1px solid #d13d38;
    border-radius: 2px;
    color: #d13d38;
    margin-right: 20px!important;
}

.btn-sure {
    background-image: linear-gradient(135deg,#d13d38,#d13d38);
    border-radius: 2px;
    color: #fff;
}