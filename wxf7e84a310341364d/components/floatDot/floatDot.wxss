.move-area-box {
    left: 0;
    pointer-events: none;
    position: fixed;
    right: 0;
    z-index: 4;
}

.move-view-box {
    align-items: center;
    background-color: #e9463a;
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(0,0,0,.3);
    color: #fff;
    display: flex;
    font-size: 13px;
    height: 38px;
    justify-content: center;
    line-height: 16px;
    padding: 3px;
    position: fixed;
    text-align: center;
    width: 38px;
    z-index: 4;
}